  <script>
    const publishBtn = document.getElementById("publish-confirm-btn");
    const progressContainer = document.getElementById("progress-container");
    const progressBar = document.getElementById("progress-bar");
    const statusText = document.getElementById("publish-status");

    publishBtn.addEventListener("click", () => {
      progressContainer.style.display = "block";
      statusText.style.display = "block";
      statusText.innerText = "Publicando...";
      progressBar.style.width = "0%";

      let progress = 0;
      const interval = setInterval(() => {
        progress += 10;
        progressBar.style.width = progress + "%";
        if (progress >= 100) {
          clearInterval(interval);
          statusText.innerText = "‚úÖ Publicaci√≥n completada con √©xito";
        }
      }, 300);
    });
  </script>

